<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mycompany.prueba1" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_alpha_circle"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >

        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DataActivity"
            android:label="@string/title_activity_data"
            android:windowSoftInputMode="stateVisible"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".PlanActivity"
            android:label="@string/title_activity_prueba"
            android:parentActivityName=".OldMainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>

        <!-- Old's ... -->
        <activity
            android:name=".OldMainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" >
            <!--intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter-->
        </activity>
        <activity
            android:name=".DatosActivity"
            android:label="@string/title_activity_datos"
            android:parentActivityName=".OldMainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <!-- / Viejos ... -->
    </application>

</manifest>
